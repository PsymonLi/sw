feature:
    id          : networking
    sub         : update_nhgroup
    package     : test.networking
    module      : networking
    runorder    : 71000
# no test case in dol as of now, to test nhgroup. adding it as a template
    enable      : False
    ignore      : True

modules:
# specify all the filters that are used in the packet testcases that will follow
    - module:
        name    : NHGROUP_WORKFLOW_START
        spec    : workflow.testspec
        iterate :
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L2,Label=NETWORKING
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L3,Label=NETWORKING

    - module:
        name    : UPD_NHGROUP
        spec    : cfg_object.testspec
        args    :
            - object    : nexthop_group
              operation : Update
        iterate :
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L2,Label=NETWORKING
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L3,Label=NETWORKING

    - module:
        name    : LOCAL2REMOTE
        mlist   : local2remote.mlist

# this triggers a packet with old values which is expected to fail since hwHabitant is False
    - module:
        name    : PREPARE_ROLLBACK
        spec    : cfg_object.testspec
        args    :
            - object    : nexthop_group
              operation : PrepareRollbackUpdate
        iterate :
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L2,Label=NETWORKING
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L3,Label=NETWORKING

    - module:
        name    : LOCAL2REMOTE
        mlist   : local2remote.mlist

    - module:
        name    : COMMIT_ROLLBACK
        spec    : cfg_object.testspec
        args    :
            - object    : nexthop_group
              operation : CommitUpdate
        iterate :
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L2,Label=NETWORKING
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L3,Label=NETWORKING

    - module:
        name    : LOCAL2REMOTE
        mlist   : local2remote.mlist

    - module:
        name    : NHGROUP_WORKFLOW_END
        spec    : workflow.testspec
        iterate :
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L2,Label=NETWORKING
            - flow : filter://FlType=MAPPING,AddrFamily=IPV4,FwdMode=L3,Label=NETWORKING
