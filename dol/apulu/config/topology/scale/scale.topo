# Scale VxLAN Topology Specification for Host mode
meta:
    id: TOPO_VxLAN_HOSTMODE_SCALE

# scale is based on apulu for 4G DSC
#
# 1 Device
# 9 VPCs (1 underlay + 8 Tenants)
# 8 Subnets (as we can have only 8 Host interfaces)
# 120 VNICs
# 3840 Local mappings (32 per VNIC. So 32*120)
# 1638400 Remote mappings
# 8 V4 Route table (each with 16383 routes)
# 32 V4 Security Policy (each with 3 rules)
# 2048 Tunnels
# 1602 Nexthops
# 360 NexthopGroups (each has random [1-8] no of nexthops)
# 1 DHCP Relay
# 48 NAT PortBlock
# 0 Mirror

dutnode : 1
node:
  - id : 1
    device:
        mode        : host # bitw (default), host
        stack       : ipv4 # ipv4 (default), ipv6
        bridging    : false # false (default), true
        learning    : false # false (default), true
        ipaddress   : None # Taken from resmgr
        gateway     : None # Taken from resmgr
        encap       : vxlan # vxlan or mplsodup
        tunnel      :
            - count : 1024
              type  : underlay
            - count : 1024
              type  : underlay-ecmp
    uplink:
       - entry:
           id      : uplink0
           port    : 1
           mode    : switch
           status  : UP

       - entry:
           id      : uplink1
           port    : 2
           mode    : switch
           status  : UP
    hostinterface:
        lif         : ref://store/specs/id=LIF_ETH
    dhcprelay:
        - vpcid : 10
          serverip : '100.1.1.1'
          agentip : '1.1.1.1'
    vpc:
        # If dual stack true, VPC and Subnet will have both v4 & v6 based on the prefixlen.
        - stack  : dual # dual, ipv4 , ipv6
          count : 1
          type  : underlay
          nexthop:
            - type : underlay
              count : 2
          interface:
            - iid           : 1
              iftype        : l3
              ifadminstatus : UP
              ipprefix      : '1.1.0.102\24'
              macaddress    : macaddr/00ae.cd00.4fde
              portid        : 1
              encap         : none
            - iid           : 2
              iftype        : l3
              ifadminstatus : UP
              ipprefix      : '1.2.0.102\24'
              macaddress    : macaddr/00ae.cd00.4fdd
              portid        : 2
              encap         : none

        - stack  : dual # dual, ipv4 , ipv6
          count : 8
          type  : tenant
          subnet:
            - count     : 1
              v4prefixlen : 10
              v6prefixlen : 64
              v4ingrpolicycount: 1        # default 0
              v4egrpolicycount : 1        # default 0
              v6ingrpolicycount: 1        # default 0
              v6egrpolicycount : 1        # default 0
              vnic:
                - count   : 15
                  ipcount : 32            # Local IP mapping per vnic
                  public  : true
                  tagged  : false         # true or false (default true)
                  # usehostif - Inherit subnet's host lif (default true)
                  usehostif: false
              rmap:                       # Remote IP mappings per subnet
                - count : 204800
          #nat:
          #  count : 1
          #  addrtype : PUBLIC_AND_SERVICE
          #  protocol : tcp,udp,icmp
          nexthop:
            - type : overlay
              count : 100
            - type : overlay
              dual-ecmp : true
              count : 100
          nexthop-group:
            - type : underlay
              count : 15
            - type : overlay
              count : 15
            - type : overlay
              dual-ecmp : True
              count : 15
          routetbl:
                 - type: base
                   routetype: adjacent
                   count : 1
                   v4base: '64.0.0.0\8'
                   v4prefixlen : 24
                   nv4routes   : 16383
                   v6base: '2000::\65'
                   v6prefixlen : 96
                   nv6routes   : 10
                   v4routes:
                   v6routes:
                   teptype : underlay
                   nat:
                     level : route # all routes will have static nat enabled
                     type  : static

          policy:
                  - type : specific
                    count : 2
                    policytype : default
                    direction : bidir
