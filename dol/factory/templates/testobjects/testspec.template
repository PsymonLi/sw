# Testcase Specification Config Section Template
meta:
    id: TESTSPEC

#By Default, running DOL test case
type: ref://factory/templates/id=DOL_TESTCASE
selectors:
    src:
        tenant      : filter://any
        segment     : filter://any
        endpoint    : filter://any
        interface   : filter://any
        lif         : filter://any
    dst:
        tenant      : filter://any
        segment     : filter://any
        endpoint    : filter://any
        interface   : filter://any
        lif         : filter://any
    flow: None
    maxflows: 0
    session: None
    maxsessions: 0
    mapping: None
    maxmappings: 0
    rdmasession: None
    maxrdmasessions: 0
    rdma:
        lqpair  : filter://any # Local QPair
        rqpair  : filter://any # Remote QPair
        session : filter://any 

packets:
    - packet:
        id          : None
        clone       : None
        payloadsize : None
        paddingsize : 0
        template    : None
        encaps      : None
        headers     : None
      callback      : None

match_profiles:
    - profile:
        id          : None
        ign_fields  :
            - None
            - None

descriptors:
    - descriptor:
        id      : None
        template: None
        fields  : None
      callback  : None

buffers:
    - buffer:
        id      : None
        template: None
        fields  : None
      callback  : None

state:
    - entry:
        object: None
        fields:

session:
    - step:
        # For session based Test Specs, the 'Trigger' and 'Expectation'
        # sections will be inside 'step'
        trigger:
            delay   : 0
            packets:
                - packet:
                    object  : None
                    port    : None

            descriptors:
                - descriptor:
                    object  : None
                    ring    : None
                    
            doorbell:
                object: None # Instance of Doorbell object.
                fields:

        expect:
            delay   : 0
            packets:
                - packet:
                    object        : None
                    port          : None
                    match_profile : None # Which match profile to use for this packet.

            descriptors:
                - descriptor:
                    object      : None  # Expected DESCRIPTOR object
                    ring        : None  # Expected RING
                    buffer      : None  # Expected Buffer
                    packet      : None  # Expected Packet

            buffers:
                - buffer:
                    object      : None  # Expected BUFFER object
