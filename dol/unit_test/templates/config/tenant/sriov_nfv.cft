# Configuration Template.
_meta:
    id: SRIOV_NFV

fabric:
    vxlan: False

uplinks:
    min: 1

tenants:
    count: 1

segments:
    count: 2
    type: tenant
    broadcast_policy: flood
    multicast_policy: replicate


endpoints:
    count       : 2
    attachments : 
        - entry:
            # 80% of endpoints will be attached as LIF
            type: LIF
            dist: percent/80
        - entry:
            # 20% of endpoints will be attached as LIF_VLAN
            # These will be trunk ENICs
            type: LIF_VLAN
            dist: percent/20
    trunk_dist  : percent/50

sessions:
    unidest:
        scale: 16
        ipv4:
            - template: config/template/TCP_BASIC
            - template: config/template/UDP_BASIC
            - template: config/template/ICMP_BASIC

        ipv6:
            - template: config/template/TCP_BASIC
            - template: config/template/UDP_BASIC
            - template: config/template/ICMPV6_BASIC

        l2:
            - template: config/template/MAC_BASIC

    multidest:
        scale   : 16
        ipv4:
            - template: config/template/L2MC_BASIC
            - template: config/template/L2BC_BASIC
        ipv6:
            - template: config/template/L2MC_BASIC
            - template: config/template/L2BC_BASIC
        l2:
            - template: config/template/L2MC_BASIC
            - template: config/template/L2BC_BASIC

lifs:
    template :   config/template/ETH_RDMA

