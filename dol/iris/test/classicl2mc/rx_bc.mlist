# Feature Test Modules List
feature:
    id          : classicl2mc
    sub         : rxbc
    package     : test.classicl2mc
    module      : classic
    enable      : True
    ignore      : False
    runorder    : 20

modules:
    - module:
        name    : BCAST
        spec    : rx_bc.testspec
        iterate :
            - flood : True
              flow  : filter://label=CLASSICL2BC
              segment   : filter://native=False

    - module:
        name    : BCAST_ACCESS
        spec    : rx_bc_access.testspec
        iterate :
            - flood : True
              flow  : filter://label=CLASSICL2BC
              segment   : filter://native=False

    - module:
        name    : BCAST_VLAN_STRIP
        spec    : rx_bc_vlan_strip.testspec
        iterate :
            - flood     : True
              flow      : filter://label=CLASSICL2BC
              segment   : filter://native=False
              vlan_strip: True

