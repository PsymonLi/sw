        clone       : ref://testcase/packets/id=BASE_PKT
        encaps      :
            - ref://factory/packets/id=ENCAP_QINQ
        headers     :
            eth:
                src     : callback://networking/packets/GetPacketSrcMacAddrFromMapping
                dst     : ref://testcase/config/localmapping/VNIC/MACAddr
            outerqtag:
                vlan    : callback://mirror/packets/GetRSPANVlanID/direction=rx,id=4
                prio    : 0
            qtag:
                vlan    : ref://testcase/config/localmapping/VNIC/VlanId
                prio    : 0

    - packet:
        id          : MIRROR_PKT_RX_5 # Expected rx mirrored packet
        clone       : ref://testcase/packets/id=BASE_PKT
        encaps      :
            - ref://factory/packets/id=ENCAP_QINQ
        headers     :
            eth:
                src     : callback://networking/packets/GetPacketSrcMacAddrFromMapping
                dst     : ref://testcase/config/localmapping/VNIC/MACAddr
            outerqtag:
                vlan    : callback://mirror/packets/GetRSPANVlanID/direction=rx,id=5
                prio    : 0
            qtag:
                vlan    : ref://testcase/config/localmapping/VNIC/VlanId
                prio    : 0

    - packet:
