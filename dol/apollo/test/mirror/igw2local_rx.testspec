    - packet:
        id          : RSPAN_MIRROR_PKT_RX_4 # Expected Truncated RSPAN rx mirrored packet for session 4
        payloadsize : callback://mirror/packets/GetRSPANPayloadSize/pktid=RSPAN_MIRROR_PKT_RX_BASE_4,direction=RX,id=4
