                dst     : ref://testcase/config/localmapping/VNIC/MACAddr
            outerqtag:
                vlan    : callback://mirror/packets/GetRSPANVlanID/direction=rx,id=6
                prio    : 0
            qtag:
                vlan    : ref://testcase/config/localmapping/VNIC/VlanId
                prio    : 0

    - packet:
        id          : MIRROR_PKT_RX_7 # Expected rx mirrored packet
        clone       : ref://testcase/packets/id=BASE_PKT
        encaps      :
            - ref://factory/packets/id=ENCAP_QINQ
        headers     :
            eth:
                src     : callback://networking/packets/GetPacketSrcMacAddrFromMapping
                dst     : ref://testcase/config/localmapping/VNIC/MACAddr
            outerqtag:
                vlan    : callback://mirror/packets/GetRSPANVlanID/direction=rx,id=7
                prio    : 0
            qtag:
                vlan    : ref://testcase/config/localmapping/VNIC/VlanId
                prio    : 0

    - packet:
        id          : MIRROR_PKT_RX_8 # Expected rx mirrored packet
        clone       : ref://testcase/packets/id=BASE_PKT
        encaps      :
            - ref://factory/packets/id=ENCAP_QINQ
        headers     :
            eth:
                src     : callback://networking/packets/GetPacketSrcMacAddrFromMapping
                dst     : ref://testcase/config/localmapping/VNIC/MACAddr
            outerqtag:
                vlan    : callback://mirror/packets/GetRSPANVlanID/direction=rx,id=8
                prio    : 0
            qtag:
                vlan    : ref://testcase/config/localmapping/VNIC/VlanId
                prio    : 0

trigger:
    packets:
        - packet:
            object  : ref://testcase/packets/id=FROM_SWITCH_PKT
            port    : ref://testcase/config/switchport

expect:
    packets:
        - packet:
            object  : ref://testcase/packets/id=TO_HOST_PKT
            port    : ref://testcase/config/hostport

        - packet:
            object  : callback://mirror/packets/GetExpectedPacket/direction=rx,id=1
            port    : callback://mirror/packets/GetRSPANPortID/direction=rx,id=1

        - packet:
            object  : callback://mirror/packets/GetExpectedPacket/direction=rx,id=2
            port    : callback://mirror/packets/GetRSPANPortID/direction=rx,id=2

        - packet:
            object  : callback://mirror/packets/GetExpectedPacket/direction=rx,id=3
            port    : callback://mirror/packets/GetRSPANPortID/direction=rx,id=3

        - packet:
            object  : callback://mirror/packets/GetExpectedPacket/direction=rx,id=4
            port    : callback://mirror/packets/GetRSPANPortID/direction=rx,id=4

        - packet:
            object  : callback://mirror/packets/GetExpectedPacket/direction=rx,id=5
            port    : callback://mirror/packets/GetRSPANPortID/direction=rx,id=5

        - packet:
            object  : callback://mirror/packets/GetExpectedPacket/direction=rx,id=6
            port    : callback://mirror/packets/GetRSPANPortID/direction=rx,id=6

        - packet:
            object  : callback://mirror/packets/GetExpectedPacket/direction=rx,id=7
            port    : callback://mirror/packets/GetRSPANPortID/direction=rx,id=7

        - packet:
            object  : callback://mirror/packets/GetExpectedPacket/direction=rx,id=8
