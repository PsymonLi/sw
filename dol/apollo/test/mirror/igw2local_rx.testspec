    - packet:
        id          : RSPAN_MIRROR_PKT_RX_BASE_4 # Expected RSPAN rx mirrored packet for session 4
        clone       : ref://testcase/packets/id=RSPAN_MIRROR_PKT_RX_BASE
        headers     :
            outerqtag:
