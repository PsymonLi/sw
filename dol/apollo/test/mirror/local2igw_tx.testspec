                prio    : 0
            qtag:
                vlan    : ref://testcase/config/localmapping/VNIC/VlanId

trigger:
    packets:
        - packet:
            object  : ref://testcase/packets/id=FROM_HOST_PKT
            port    : ref://testcase/config/hostport

expect:
