# Test Spec
selectors:
    src:
        tenant      : filter://type=TENANT
        segment     : filter://broadcast_policy=2,fabencap=VXLAN
        endpoint    : filter://remote=True
        interface   : filter://any
    flow        : filter://fwtype=L2
    maxflows    : None

packets:
    - packet:
        id          : BASE_PKT # Base packet
        payloadsize : ref://factory/payloads/id=PAYLOAD_ZERO64/size
        template    : callback://networking/packets/GetPacketTemplateByFlow
        headers     :
            # Add all possible headers, the final headers will be selected
            # based on the Flow.
            eth:
                src     : ref://testcase/config/src/endpoint/macaddr
                dst     : 01:00:5E:01:01:01
            ipv4:
                src     : ref://testcase/config/flow/sip
                dst     : 239.1.1.1
                ttl     : 64
            ipv6:
                src     : ref://testcase/config/flow/sip
                dst     : ref://testcase/config/flow/dip
                hlim    : 64
            udp:
                sport   : ref://testcase/config/flow/sport
                dport   : ref://testcase/config/flow/dport
            tcp:
                sport   : ref://testcase/config/flow/sport
                dport   : ref://testcase/config/flow/dport
            icmp:
                code    : ref://testcase/config/flow/icmpcode
                type    : ref://testcase/config/flow/icmptype
                id      : ref://testcase/config/flow/icmpid
            icmpv6:
                #code    : ref://testcase/config/flow/icmpcode
                #type    : ref://testcase/config/flow/icmptype
                #id      : ref://testcase/config/flow/icmpid
            payload:
                data    : ref://factory/payloads/id=PAYLOAD_ZERO64/data

    - packet:
        id          : TX_PKT     # Input packet
        clone       : ref://testcase/packets/id=BASE_PKT
        encaps      : callback://networking/packets/GetPacketEncaps
        headers     :
            outereth    :
                src     : callback://networking/packets/GetInfraRtrMac
                dst     : callback://networking/packets/GetGIPoMac
            outeripv4   :
                src     : callback://networking/packets/GetMyTep
                dst     : ref://testcase/config/src/segment/gipo
                tos     : 0
                id      : 0
            qtag:
                vlan    : callback://networking/packets/GetInfraVlanId
                prio    : ref://testcase/config/flow/txqos/cos
            outerudp:
                chksum  : 0
            vxlan       :
                vni     : ref://testcase/config/src/segment/vxlan_id
            ipv4:
                tos     : ref://testcase/config/flow/txqos/dscp
            ipv6:
                tc      : ref://testcase/config/flow/txqos/dscp

    - packet:
        id          : EXP_PKT_COPY0     # Expected packet on Enics
        clone       : ref://testcase/packets/id=BASE_PKT
        encaps      : callback://networking/packets/GetExpectedPacketEncaps
        headers     :
            qtag:
                vlan: callback://classic/callbacks/GetEncapVlanIdForMulticastCopy/idx=0

    - packet:
        id          : EXP_PKT_COPY1     # Expected packet on Enics
        clone       : ref://testcase/packets/id=BASE_PKT
        encaps      : callback://networking/packets/GetExpectedPacketEncaps
        headers     :
            qtag:
                vlan: callback://classic/callbacks/GetEncapVlanIdForMulticastCopy/idx=1


buffers:
    - buffer:
        id      : RX_BUF_COPY0  # Input Buffer
        template: ref://factory/templates/id=ETH_BUFFER
        fields:
            bind: True
            size: 1518
            data: None

    - buffer:
        id      : RX_BUF_COPY1  # Input Buffer
        template: ref://factory/templates/id=ETH_BUFFER
        fields:
            bind: True
            size: 1518
            data: None

    - buffer:
        id      : EXP_BUF_COPY0  # Expected Buffer
        template: ref://factory/templates/id=ETH_BUFFER
        fields:
            bind  : False
            size  : ref://testcase/packets/id=EXP_PKT_COPY0/size
            data  : ref://testcase/packets/id=EXP_PKT_COPY0/rawbytes

    - buffer:
        id      : EXP_BUF_COPY1  # Expected Buffer
        template: ref://factory/templates/id=ETH_BUFFER
        fields:
            bind  : False
            size  : ref://testcase/packets/id=EXP_PKT_COPY1/size
            data  : ref://testcase/packets/id=EXP_PKT_COPY1/rawbytes


descriptors:
    - descriptor:
        id      : RX_DESC_COPY0
        template: ref://factory/templates/id=DESCR_ETH_RX
        fields:
            _buf  : ref://testcase/buffers/id=RX_BUF_COPY0
            addr  : ref://testcase/buffers/id=RX_BUF_COPY0/addr
            len   : ref://testcase/buffers/id=RX_BUF_COPY0/size

    - descriptor:
        id      : RX_DESC_COPY1
        template: ref://factory/templates/id=DESCR_ETH_RX
        fields:
            _buf  : ref://testcase/buffers/id=RX_BUF_COPY1
            addr  : ref://testcase/buffers/id=RX_BUF_COPY1/addr
            len   : ref://testcase/buffers/id=RX_BUF_COPY1/size

    - descriptor:
        id      : EXP_DESC_COPY0 # Expected Descriptor
        template: ref://factory/templates/id=DESCR_ETH_RX_CQ
        fields:
            _buf          : ref://testcase/buffers/id=EXP_BUF_COPY0
            bytes_written : ref://testcase/buffers/id=EXP_BUF_COPY0/size

    - descriptor:
        id      : EXP_DESC_COPY1 # Expected Descriptor
        template: ref://factory/templates/id=DESCR_ETH_RX_CQ
        fields:
            _buf          : ref://testcase/buffers/id=EXP_BUF_COPY1
            bytes_written : ref://testcase/buffers/id=EXP_BUF_COPY1/size


trigger:
    descriptors:
        - descriptor:
            object  : ref://testcase/descriptors/id=RX_DESC_COPY0
            ring    : callback://classic/callbacks/GetRxRingForMulticastCopy/idx=0

        - descriptor:
            object  : ref://testcase/descriptors/id=RX_DESC_COPY0
            ring    : callback://classic/callbacks/GetRxRingForMulticastCopy/idx=1

    packets:
        - packet:
            object  : ref://testcase/packets/id=TX_PKT
            port    : callback://classic/callbacks/GetRxUplinkPorts

expect:
    delay   : callback://networking/packets/GetExpectDelay

    descriptors:
        - descriptor:
            object  : ref://testcase/descriptors/id=EXP_DESC_COPY0
            ring    : callback://classic/callbacks/GetRxCqRingForMulticastCopy/idx=0
        - descriptor:
            object  : ref://testcase/descriptors/id=EXP_DESC_COPY1
            ring    : callback://classic/callbacks/GetRxCqRingForMulticastCopy/idx=1

