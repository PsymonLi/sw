{
  "compileOnSave": false,
  "compilerOptions": {
    "newLine": "lf",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@common/*": [
        "app/common/*"
      ],
      "@lib/*": [
        "app/lib/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@sdk/*": [
        "../../venice-sdk/*"
      ],
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    },
    "module": "es2015"
  }
}