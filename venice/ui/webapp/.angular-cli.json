{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "venice-ui"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "data",
        "favicon.ico",
        {
          "glob": "*.svg",
          "input": "../node_modules/material-design-icons/sprites/svg-sprite/",
          "output": "assets/svg-icons"

        }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.scss",
        "theme.scss" ,
        "styles-app-loading.scss",
        "../node_modules/font-awesome/css/font-awesome.css",
        "../node_modules/primeng/resources/themes/omega/theme.css",
        "../node_modules/primeng/resources/primeng.css",
        "../node_modules/primeicons/primeicons.css",
        "../node_modules/material-design-icons/iconfont/material-icons.css",
        "../node_modules/bootstrap/dist/css/bootstrap.min.css",
        "../node_modules/typeface-fira-sans-condensed/index.css",
        "../node_modules/typeface-roboto-condensed/index.css"

      ],
      "stylePreprocessorOptions": {
        "includePaths": ["./", "./themes"] 
      },
      "scripts": [
        "../node_modules/plotly.js/dist/plotly.min.js",
        "../node_modules/chart.js/dist/Chart.js",
        "../node_modules/chartjs-plugin-datalabels/dist/chartjs-plugin-datalabels.js",
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/bootstrap/dist/js/bootstrap.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {
    }
  }
}
