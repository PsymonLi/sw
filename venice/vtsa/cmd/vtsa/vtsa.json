{
	"Name" : "ExampleConfig",
	"FilesystemRoot" : "/tmp",
	"PrepActions" : [
				{
					"Name" : "Action1",
					"Method" : 0,
					"Command" : "ls -l"
				}
			],

	"CollectActions" : [
                                {
                                        "Name" : "Action1",
                                        "Method" : 0,
                                        "Command" : "ps -aefl"
                                },
                                {
                                        "Name" : "GetKubeLogs",
                                        "Method" : 0,
                                        "Command" : "mkdir -p kubelogs && for i in $(kubectl get pods | awk '{print $1}' | grep -v NAME) ; do kubectl logs $i > kubelogs/$i; done"
                                },
                                {
                                        "Name" : "ShowPods",
                                        "Method" : 0,
                                        "Command" : "kubectl get pods -o wide"
                                },
                                {
                                        "Name" : "Cores",
                                        "Method" : 0,
					"Command" : "mkdir core && cp /data/core/* core"
                                },
				{
                                        "Name" : "Logs",
                                        "Method" : 0,
                                        "Command" : "mkdir logs && cp /var/log/pensando/* logs/"
                                },
                                {
                                        "Name" : "Events",
                                        "Method" : 0,
                                        "Command" : "mkdir events && cp -r /var/lib/pensando/events/* events/"
                                },
                                {
                                        "Name" : "Uptime",
                                        "Method" : 0,
                                        "Command" : "uptime"
                                }
			],

	"ExportActions" : [
			],

	"RetentionPolicy" : 0
}				
