meta:
    name: FW_TRIGGERS
    description: Run triggers against firewall testsuites

config:
    #Run a particular testcase
    #Number of iterations
    iterations: 3
    #Run lineraly or randomize suites
    run-type: linear
    #Scale data run
    scale-data: True
    stop-on-failure: True

testsuites:
    - suite: firewall
      focus: ""

triggers:
    - trigger: FlapDataPorts
      percent: 50
      skip-setup: True
    - trigger: HostReboot
      percent: 50
      skip-setup: True
    - trigger: VeniceReboot
      percent: 50
      skip-setup: True
    - trigger: NaplesRemoveAdd
      percent: 50
      skip-setup: True
    - trigger: NaplesMgmtLinkFlap
      percent: 50
      skip-setup: True
