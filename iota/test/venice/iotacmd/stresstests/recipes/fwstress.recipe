meta:
    name: FW_TRIGGERS
    description: Run triggers against firewall testsuites

config:
    #Run a particular testcase
    #Number of iterations
    iterations: 50
    #Run lineraly or randomize suites
    run-type: linear
    #Scale data run
    scale-data: True
    stop-on-failure: True
    #Max run time for stree in hours
    max-run-time: 24h

testsuites:
    #- suite: firewall
    #  focus: "sanity=true"
    #- suite: monitor
    #  focus: "sanity=true"
    - suite: cluster
    #  focus: "sanity=true"

triggers:
    - trigger: VenicePartition
      percent: 50
      skip-setup: True
    - trigger: NaplesUpgrade
      percent: 50
      reinstall-on-failure: True
      skip-setup: True
    - trigger: VeniceReboot
      percent: 50
      skip-setup: True
    - trigger: HostReboot
      percent: 50
      skip-setup: True
    - trigger: NaplesRemoveAdd
      percent: 50
      skip-setup: True
    - trigger: FlapDataPorts
      percent: 50
      skip-setup: True
    - trigger: NaplesMgmtLinkFlap
      percent: 50
      skip-setup: True

noises:
   # - noise: GenEvents
   #   rate: 5
   #   count: 50000
    - noise: GenFWLogs
      rate: 25
      count: 1000000
    #- noise: FlapPorts
    #  #Flap every 30 seconds
    #  rate: 30
    #  count: 1000000
