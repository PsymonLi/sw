# VxLAN Topology Specification
meta:
    id: TOPO_VxLAN_HOSTMODE

device:
    id          : 1
    mode        : host # bitw (default), host
    stack       : ipv4 # ipv4 (default), ipv6
    bridging    : false # false (default), true
    overlay     : false # false (default), true
    learning    : false # false (default), true
    ipaddress   : '13.13.13.13' # Taken from resmgr
    gateway     : '1.0.0.1' # Taken from resmgr
    macaddress  : macaddr/0000.aaaa.aaa1
    encap       : vxlan # vxlan or mplsodup

uplink:
    - entry:
        id      : uplink0
        port    : 1
        mode    : switch
        status  : UP
    - entry:
        id      : uplink1
        port    : 2
        mode    : switch
        status  : UP

vpc:
    - id         : 100
      stack      : ipv4 # dual, ipv4 , ipv6
      count      : 1
      type       : underlay
      interface:
        - iid           : 1
          iftype        : l3
          ifadminstatus : UP
          ipprefix      : '13.1.0.1\24'
          macaddress    : macaddr/00ae.cd00.4fde
          portid        : 1
          encap         : none
        - iid           : 2
          iftype        : l3
          ifadminstatus : UP
          ipprefix      : '13.2.0.1\24'
          macaddress    : macaddr/00ae.cd00.4fdd
          portid        : 2
          encap         : none
        - iid           : 3
          iftype        : loopback
          ifadminstatus : UP
          ipprefix      : '13.13.13.13\32'
          encap         : none
      nexthop:
        - id         : 1
          count      : 1
          type       : underlay
          l3intfid   : 1
          macaddress : macaddr/00ae.cd00.14ce
        - id         : 2
          count      : 1
          type       : underlay
          l3intfid   : 2
          macaddress : macaddr/00ae.cd00.14cd
      bgpglobal:
        - localasn      : 100
          routerid      : 13.13.13.13
      bgppeer:
        # underlay bgp peer 1
        - peeraddr      : 13.1.0.2
          localaddr     : 13.1.0.1
          adminstate    : 1
          sendcomm      : true
          sendextcomm   : true
          connectretry  : 5
          rrclient      : false
          # specify interface to override ip addresses from testbed json
          #interface     : "Uplink0"
          remoteasn     : 600
          holdtime      : 180
          keepalive     : 60
          bgppeeraf:
              peeraddr  : 13.1.0.2
              localaddr : 13.1.0.1
              afi       : ipv4
              safi      : unicast
        # underlay bgp peer 2
        - peeraddr      : 13.2.0.2
          localaddr     : 13.2.0.1
          adminstate    : 1
          sendcomm      : true
          sendextcomm   : true
          connectretry  : 5
          rrclient      : false
          # specify interface to override ip addresses from testbed json
          #interface     : "Uplink1"
          remoteasn     : 600
          holdtime      : 180
          keepalive     : 60
          bgppeeraf:
              peeraddr  : 13.2.0.2
              localaddr : 13.2.0.1
              afi       : ipv4
              safi      : unicast
    - id         : 1
      stack      : ipv4 # dual, ipv4 , ipv6
      count      : 1
      type       : tenant
      tunnel:
        - id         : 1
          count      : 1
          type       : underlay
          srcaddr    : '13.13.13.13'
          dstaddr    : '14.14.14.14'
          macaddress : macaddr/0000.aaaa.aaa1
          encap      : vxlan
          nhid       : 1
      subnet:
        - id               : 1
          count            : 1
          v4prefixlen      : 24
          v4prefix         : '2.1.0.0\24'
          hostifidx        : 0x8000004c
          fabricencap      : vxlan # vxlan or mplsodup
          fabricencapvalue : 202
          v4routerip       : '2.1.0.0'
          vroutermac       : macaddr/0055.0100.0001
          vnic:
            - id        : 1
              count     : 1             # 1 untagged VNIC
              vmac      : macaddr/00ae.cd00.0811
              hostifidx : 0x8000004c
              ipcount : 1             # Local IP mapping per vnic
              lmap    :
                - id       : 1
                  count    : 1
                  keytype  : l3
                  lmacaddr : macaddr/00ae.cd00.0811
                  lipaddr  : '2.1.0.2'
              srcguard: false         # true or false (default false)
              public  : false
              tagged  : false         # true or false (default true)
              localvnic : true
              remoteroutes : '64.0.0.0\24'
          rmap:                       # Remote IP mappings per subnet
            - id       : 2
              count    : 1
              keytype  : l3
              rmacaddr : macaddr/00ae.cd00.000a
              ripaddr  : '2.1.0.3'
              tunnelid : 1
      nexthop:
        - id         : 3
          type       : overlay
          count      : 1
          tunnelid   : 1
      routetbl:
             - type: specific # route table with disjoint routes
               count : 1 # always 1 if routes specified by user
               routetype: disjoint
               teptype : underlay
               v4routes:
                   - '10.10.0.0\16'

             - type: specific
               routetype: disjoint
               v4routes:
                   - '64.0.0.2\32'
               teptype : underlay
               nat:
                 level : route
                 type : static

      policy:
             - type : specific
               policytype : default
               direction : bidir

      nat:
        count : 2
        addrtype : PUBLIC_AND_SERVICE
        protocol : tcp,udp,icmp

# ECMP:
# Object types and order of creation of objects for different kinds of ECMP.
# In dol, DualEcmp flag is maintained in route, nexthop group and nexthop objs.
# For route table with DualEcmp set to True, only a nexthopgroup with DualEcmp
# set to True is selected.
#
# 1. no-ecmp
#     route       -->     tep         -->     nexthop
#     [OVERLAY]         [UNDERLAY]           [UNDERLAY]
#
# 2. underlay ecmp
#     route       -->     tep         -->     nhgroup      -->     {nexthops}
#   [OVERLAY]           [UNDERLAY-ECMP]      [UNDERLAY ECMP]       [UNDERLAY]
#
# 3. overlay ecmp
#     route       -->     nhgroup     -->     {nexthops}   -->     {teps}  -->     {nexthops}
#    [OVERLAY ECMP]      [OVERLAY ECMP]      [OVERLAY]          [UNDERLAY]        [UNDERLAY]
#
# 4. dual ecmp
#     route       -->     nhgroup     -->     {nexthops}   -->     {teps}  -->     {nhgroup}    -->   {{nexthops}}
#     [OVERLAY ECMP]      [OVERLAY ECMP]      [OVERLAY]          [UNDERLAY ECMP]  [UNDERLAY ECMP]       [UNDERLAY]
