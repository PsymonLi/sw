meta:
    name        : apulu_sdn_vpp_bm
    description : Apulu SDN VPP Baremetal Testsuite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : hostpin
    enable      : True
    os          : [ linux ]

packages:
    - iota.test.apulu

image_manifest:
    spec        : images/latest.json

setup:
    topology : test/apulu/topologies/classic_baremetal/classic_baremetal.topology
    config   :
        - step : verif.config.verify_oob
        - step : config.set_max_mtu
        - step : config.topology
          args :
             spec :
                node1 : 2naples_container_static_node1.cfgyml
                node2 : 2naples_container_static_node2.cfgyml
        - step : config.bringup_workloads

common:
    verifs:

    debugs:
        - step : verif.utils.collect_techsupport

    setup:

testbundles:
    sanity:
        # Relative paths from iota/test/apulu/testbundles/
        - vpp/cps_kernel_pktgen.testbundle

    regression:
        # Relative paths from iota/test/apulu/testbundles/

teardown:
    - step : verif.utils.collect_techsupport
