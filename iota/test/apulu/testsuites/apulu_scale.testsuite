meta:
    name        : apulu_scale
    description : Apulu Scale Config Testsuite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic
    os          : [ linux, freebsd ]

packages:
    - iota.test.apulu

images:
    naples: nic/naples_fw.tar

setup:
    topology: test/apulu/topologies/classic_baremetal/classic_baremetal.topology
    config  :
        - step : verif.config.verify_oob
        - step : config.set_max_mtu
        - step : config.topology
          args :
             spec :
                node1 : 2naples_bm_dynamic_scale_node1.cfgyml
                node2 : 2naples_bm_dynamic_scale_node2.cfgyml
        - step : config.bringup_workloads
        - step : config.add_routes

common:
    verifs:
        #-   step    : verif.utils.verify_links
        #-   step    : verif.utils.verify_cores
        #-   step    : verif.utils.verify_topology_health
    debugs:
        -   step    : verif.utils.collect_techsupport

    setup:
        #-   step    : verif.utils.link_flap
        #-   step    : verif.utils.del_add_config

testbundles:
    sanity:
        # Relative paths from iota/test/apulu/testbundles/
        - api_crud_scale/api_crud_scale.testbundle

    regression:
        # Relative paths from iota/test/apulu/testbundles/

teardown:
    - step      : verif.utils.collect_techsupport
