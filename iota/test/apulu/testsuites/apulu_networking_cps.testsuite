meta:
    name        : apulu_networking_cps
    description : Apulu Networking CPS Testsuite
    mode        : hardware
    cfgmode     : netagent
    #cfgmode     : True
    nicmode     : hostpin
    enable      : True
    os          : [ linux, linux ]

packages:
    - iota.test.apulu

image_manifest:
    spec        : images/latest.json
    naples      : capri

setup:
    topology: test/apulu/topologies/classic_baremetal/vm.topology
    config  :
        #- step : utils.naples_workloads
        - step : verif.config.verify_oob
        - step : config.set_max_mtu
        - step : config.topology
          args :
             spec :
                node1 : 2naples_container_static_node1.cfgyml
                node2 : 2naples_container_static_node2.cfgyml
        - step : config.bringup_workloads
          args :
             trex : True

common:
    verifs:
        #-   step    : verif.utils.verify_links
        #-   step    : verif.utils.verify_cores
        #-   step    : verif.utils.verify_topology_health
    debugs:
        -   step    : verif.utils.collect_techsupport

    setup:
        #-   step    : verif.utils.link_flap
        #-   step    : verif.utils.del_add_config

testbundles:
    sanity:
        # Relative paths from iota/test/apulu/testbundles/
        #- networking/scale.testbundle
        - networking/cps.testbundle
        #- networking/local2remote.testbundle

    regression:
        # Relative paths from iota/test/apulu/testbundles/

teardown:
    -   step    : verif.utils.collect_techsupport
