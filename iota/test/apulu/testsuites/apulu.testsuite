meta:
    name        : apulu
    description : Apulu Testsuite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic
    os          : [ linux, freebsd ]

packages:
    - iota.test.apulu

images:
    naples: nic/naples_fw.tar

setup:
    topology: test/apulu/topologies/classic_baremetal/classic_baremetal.topology
    config:
        - step : utils.cleanup

common:
    verifs: []
    debugs: []
    setup: []

testbundles:
    sanity:
        # Relative paths from iota/test/apulu/testbundles/
        - mnic/mnic_classic.testbundle
    regression:
        # Relative paths from iota/test/iris/testbundles/

teardown: []
