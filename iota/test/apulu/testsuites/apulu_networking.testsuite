meta:
    name        : apulu_networking
    description : Apulu Networking Testsuite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic
    os          : [ linux, freebsd ]

packages:
    - iota.test.apulu

image_manifest:
    spec        : images/latest.json
    naples      : capri

setup:
    topology: test/apulu/topologies/classic_baremetal/container_centos.topology
    config  :
        #- step : utils.naples_workloads
        - step : verif.config.verify_oob
        - step : config.set_max_mtu
        - step : config.topology
          args :
             spec :
                node1 : 2naples_bm_static_node1.cfgyml
                node2 : 2naples_bm_static_node2.cfgyml
        - step : config.bringup_workloads
        - step : config.add_routes

common:
    verifs:
        #-   step    : verif.utils.verify_links
        #-   step    : verif.utils.verify_cores
        #-   step    : verif.utils.verify_topology_health
    debugs:
        -   step    : verif.utils.collect_techsupport

    setup:
        #-   step    : verif.utils.link_flap
        #-   step    : verif.utils.del_add_config

testbundles:
    sanity:
        # Relative paths from iota/test/apulu/testbundles/
        - networking/underlay_direct.testbundle
        - networking/networking.testbundle
        - arp_proxy.testbundle
        - h2vrip.testbundle
        - classic/ethtool.testbundle
        #- policy/policy.testbundle
        - api_crud/api_crud.testbundle
        - mtu/mtu.testbundle
        - vlanoffload/vlanoffload.testbundle
        - classic/driver-features-sanity.testbundle
        - reboot/reboot.testbundle
        - p4ctl/p4ctl.testbundle
        - techsupport/techsupport.testbundle

    regression:
        # Relative paths from iota/test/apulu/testbundles/

teardown:
    -   step    : verif.utils.collect_techsupport
