meta:
    name    : cps
    os      : [ linux ]
    nics    : [ pensando ]

testcases:
    -   name    : Trex_CPS_cloud
        testcase: testcases.networking.conn_per_sec
        stress  : False
        ignore  : False
        args    :
            type: remote_only
        iterators:
            type      : simple
            proto     : [ udp ]
            cps       : [ 238500 ]
            duration  : [ 1 ]

    -   name    : Trex_UDP_TCP_Remote_Workloads
        testcase: testcases.networking.conn_per_sec
        stress  : False
        ignore  : True
        args    :
            type: remote_only
        iterators:
            type      : simple
            proto     : [ tcp, tcp ]
            cps       : [ 10000, 200 ]
            duration  : [ 10, 3000 ]

    -   name    : Traffic_Test_With_Triggers
        testcase: testcases.networking.conn_per_sec
        stress  : True
        ignore  : False
        args    :
            type: remote_only
            objtype : [ subnet, vnic ]
            triggers : True
            security_profile:
                conntrack      : True
                tcpidletimeout : 90
                udpidletimeout : 90
        iterators:
            type      : simple
            proto     : [ udp ]
            cps       : [ 100000 ]
            duration  : [ 300 ]
        background_tasks:
            showStats        :
                trigger         : auto
                run             : repeat
                sleep_interval  : 20
                terminate       : verify
            switchPortFlap   :
                trigger         : auto
                run             : repeat
                sleep_interval  : 30
                terminate       : verify
            clearFlows       :
                trigger         : auto
                run             : repeat
                sleep_interval  : 90
                terminate       : verify
            showFlows        :
                trigger         : auto
                run             : repeat
                sleep_interval  : 30
                terminate       : verify
            configurationChangeEvent :
                trigger         : auto
                run             : repeat
                sleep_interval  : 20
                terminate       : verify
