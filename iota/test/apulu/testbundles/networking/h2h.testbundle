meta:
    name    : h2h
    os      : [ linux ]
    nicmode : classic
    nics    : [ pensando ]

testcases:
    -   name    : Workload_Connectivity
        testcase: testcases.networking.connectivity
        stress  : True
        iterators :
            type    : nested
            ipaf    : [ ipv4 ]
            proto   : [ icmp ]
            pktsize : [ 64, 128, 256, 512, 1024 ]
            workload_type : [ remote ]
            # workload_type : [ local, remote ] # enable when L2L works
            workload_scope : [ intra ]
            # workload_scope : [ intra, inter ] # enable when inter subnet works
