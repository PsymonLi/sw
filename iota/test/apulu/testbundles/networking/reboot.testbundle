meta:
    name    : reboot
    os      : [ linux ]
    nicmode : classic
    nics    : [ pensando ]

testcases:
    -   name    : RebootOS
        testcase: testcases.reboot.reboot
        args    :
            reboot_count: 1
            restart_mode: 'reboot'

    -   name    : Post_Reboot_Ping_UnderlayLB
        testcase: testcases.underlay.ping
        args    :
            ping_count: 4
            ping_interval: 0.01
        iterators :
            type            : nested
            ipaf            : [ ipv4 ]
            pktsize         : [ 64 ]
            connectivity    : [ underlay_lb]
            interface       : [ switchports ]
            port_status     : [ up ] 

