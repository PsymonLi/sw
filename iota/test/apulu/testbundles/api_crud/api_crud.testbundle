meta:
    name    : api_crud
    os      : [ linux ]
    nicmode : classic
    nics    : [ pensando ]

testcases:
    -   name    : API_CRUD_For_Delete_Ping_Traffic
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # objects tested with delete config.
            # TODO: nh-group
            # route object excluded from local2remote tests, because no hit
            #objtype : [ device, vpc, subnet, vnic, tunnel, lmapping, rmapping, nexthop, interface ]
            objtype : [ device, subnet, vnic, tunnel, lmapping, rmapping, nexthop ]
            oper    : [ [delete] ]

    -   name    : API_CRUD_For_Update_Ping_Traffic
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # objects tested with update config.
            # TODO: nh-group
            objtype : [ device, vpc, subnet, vnic, tunnel, nexthop, interface]
            oper    : [ [update] ]

    -   name    : 1_Object_Idempotency_Ping_Traffic
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # TODO: nh-group
            #objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, interface, lmapping, rmapping ]
            objtype : [ device, subnet, vnic, nexthop, tunnel, lmapping, rmapping ]
            oper    : [ [create, create], [delete, read, update, read] ]

    -   name    : 2_Object_Idempotency_Ping_Traffic
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            #objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, interface, lmapping, rmapping ]
            objtype : [ device, subnet, vnic, nexthop, tunnel, lmapping, rmapping ]
            oper    : [ [delete, delete] ]

    -   name    : 3_Object_Idempotency_Ping_Traffic
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, interface, lmapping, rmapping ]
            oper    : [ [update, create] ]

