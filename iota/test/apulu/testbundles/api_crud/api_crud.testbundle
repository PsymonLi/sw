meta:
    name    : api_crud
    os      : [ linux ]
    nicmode : classic
    nics    : [ pensando ]

testcases:
    -   name    : Delete_And_Ping
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # objects tested with delete config.
            # TODO: nh-group
            # Note: route object excluded from local2remote tests, because no hit
            #       underlay nexthops used by datapath are pushed by underlay BGP. This will validate only hal config path
            #objtype : [ device, vpc, subnet, vnic, tunnel, lmapping, rmapping, nexthop, interface ]
            objtype : [ device, vpc, subnet, vnic, tunnel, lmapping, rmapping, nexthop ]
            oper    : [ [delete] ]

    -   name    : Update_And_Ping
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # objects tested with update config.
            # TODO: nh-group
            #objtype : [ device, vpc, subnet, vnic, tunnel, nexthop, interface]
            objtype : [ device, vpc, subnet, vnic, nexthop, interface]
            oper    : [ [update] ]

    -   name    : Create_Create_And_Ping
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # TODO: nh-group
            objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, interface, lmapping, rmapping ]
            oper    : [ [create, create] ]

    -   name    : Delete_Update_And_Ping
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # TODO: nh-group
            #objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, interface, lmapping, rmapping ]
            objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, lmapping, rmapping ]
            oper    : [ [delete, read, update, read] ]

    -   name    : Delete_Delete_And_Ping
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            #objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, interface, lmapping, rmapping ]
            objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, lmapping, rmapping ]
            oper    : [ [delete, delete] ]

    -   name    : Update_Create_And_Ping
        testcase: testcases.api_crud.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            #objtype : [ device, vpc, subnet, vnic, nexthop, tunnel, interface, lmapping, rmapping ]
            objtype : [ device, vpc, subnet, vnic, nexthop, interface, lmapping, rmapping ]
            oper    : [ [update, create] ]

