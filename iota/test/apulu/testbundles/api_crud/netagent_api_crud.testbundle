meta:
    name    : api_crud
    os      : [ linux ]
    nicmode : classic
    nics    : [ pensando ]

testcases:
    -   name    : API_CRUD_For_Delete_Ping_Traffic
        testcase: testcases.api_crud.underlay_ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # objects tested with delete config.
            # TODO: nh-group
            # route object excluded from local2remote tests, because no hit
            objtype : [ vpc, subnet, policy]
            oper    : [ [delete] ]
        background_tasks:
            switchPortFlap  :
                trigger         : auto
                run             : once
                sleep_interval  : 5
                terminate       : verify
            flapHostIntf    :
                trigger         : auto
                run             : once
                sleep_interval  : 2
                terminate       : verify

    -   name    : API_CRUD_For_Update_Ping_Traffic
        testcase: testcases.api_crud.underlay_ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # objects tested with update config.
            # TODO: nh-group
            objtype : [ vpc, subnet, bgp, interface, policy ]
            oper    : [ [update] ]
        background_tasks:
            switchPortFlap  :
                trigger         : auto
                run             : once
                sleep_interval  : 5
                terminate       : verify
            flapHostIntf    :
                trigger         : auto
                run             : once
                sleep_interval  : 2
                terminate       : verify

    -   name    : 1_Object_Idempotency_Ping_Traffic
        testcase: testcases.api_crud.underlay_ping
        stress  : True
        args    :
            type: remote_only
            ping_count: 200
            ping_interval: 0.1
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            # TODO: nh-group
            objtype : [ vpc, subnet, policy ]
            oper    : [ [create, create], [delete, read, update, read] ]
        background_tasks:
            switchPortFlap  :
                trigger         : auto
                run             : once
                sleep_interval  : 5
                terminate       : verify
            flapHostIntf    :
                trigger         : auto
                run             : once
                sleep_interval  : 2
                terminate       : verify

    -   name    : 2_Object_Idempotency_Ping_Traffic
        testcase: testcases.api_crud.underlay_ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            objtype : [ vpc, subnet, policy ]
            oper    : [ [delete, delete] ]
        background_tasks:
            switchPortFlap  :
                trigger         : auto
                run             : once
                sleep_interval  : 5
                terminate       : verify
            flapHostIntf    :
                trigger         : auto
                run             : once
                sleep_interval  : 2
                terminate       : verify

    -   name    : 3_Object_Idempotency_Ping_Traffic
        testcase: testcases.api_crud.underlay_ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            #ipaf   : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]
            objtype : [ vpc, subnet, policy ]
            oper    : [ [update, create] ]
        background_tasks:
            switchPortFlap  :
                trigger         : auto
                run             : once
                sleep_interval  : 5
                terminate       : verify
            flapHostIntf    :
                trigger         : auto
                run             : once
                sleep_interval  : 2
                terminate       : verify

