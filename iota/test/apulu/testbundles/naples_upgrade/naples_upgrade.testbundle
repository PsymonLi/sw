meta:
    name    : naples_upgrade
    os      : [ linux ]
    nics    : [ pensando, mellanox, intel ]
    targetcount : 1

testcases:
    -   name        : DISRUPTIVE_UPGRADE
        testcase    : testcases.naples_upgrade.disruptive_upgrade
        disable     : False
        ignore      : True
        iterators   :
            type    : simple
            option  : [""]
        args        :
            sleep   : 150

    -   name        : DISRUPTIVE_UPGRADE_GRACEFUL
        testcase    : testcases.naples_upgrade.disruptive_upgrade
        disable     : True
        ignore      : True
        iterators   :
            type    : simple
            option  : [""]
            workload_type : [ remote ]
            workload_scope : [ inter-subnet ]
        args        :
            sleep   : 200
            mode    : "graceful"
            type    : remote_only
