meta:
    name: ClassicBM
    description: Classic NIC Baremetal Topology

nodes:
    - node: node1
      name: node1
      role: auto
      workloads:
        linux:
            type    : WORKLOAD_TYPE_BARE_METAL
            image   : "N/A"
        freebsd:
            type    : WORKLOAD_TYPE_BARE_METAL
            image   : "N/A"

    - node: node2
      name: node2
      role: auto
      workloads:
        linux:
            type    : WORKLOAD_TYPE_BARE_METAL
            image   : "N/A"
        freebsd:
            type    : WORKLOAD_TYPE_BARE_METAL
            image   : "N/A"

vlan_mappings:
    vlan_group_1:
        groups:
        - node: node1
          nic: 1
          port: 2
        - node: node1
          nic: 2
          port: 2
    vlan_group_2:
        skip_allocation: true
        groups:
        - node: node1
          nic: 2
          port: 3
        - node: node2
          nic: 1
          port: 2
    vlan_group_3:
        groups:
        - node: node2
          nic: 1
          port: 3
        - node: node2
          nic: 2
          port: 3
