meta:
    name    : telemetry
    nics    : [ pensando, mellanox, intel, broadcom ]
    os      : [ linux, esx ]
    targetcount : 72

testcases:
    -   name    : Ping_Mirror_Policy
        testcase: testcases.telemetry.ping_mirror_policy
        enable  : True
        ignore  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            pktsize : [128]
            proto   : [tcp, udp, icmp, mixed]

    -   name    : Flowmon_Policy
        testcase: testcases.telemetry.flowmon_policy
        enable  : True
        ignore  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            pktsize : [128]
            proto   : [tcp, udp, icmp, mixed]

    -   name    : Mirror_Policy_With_Flap
        testcase: testcases.telemetry.mirror_flap
        enable  : True
        ignore  : True
        args    :
            port_shut_time: 60
        iterators :
            type    : nested
            pktsize : [128]
            proto   : [tcp]

    -   name    : Flowmon_Policy_With_Flap
        testcase: testcases.telemetry.flowmon_flap
        enable  : True
        ignore  : True
        args    :
            port_shut_time: 60
        iterators :
            type    : nested
            pktsize : [128]
            proto   : [tcp]
    
    -   name    : Mirror_Crud_Policy
        testcase: testcases.telemetry.mirror_crud_policy
        enable  : True
        ignore  : True
        args    :
            type: remote_only
        iterators :
            type    : simple
            num_collectors : [1, 3, 7]
            num_mirror_sessions : [1, 4, 8]
            proto   : [icmp, tcp, udp]

    -   name    : Flowmon_Crud_Policy
        testcase: testcases.telemetry.flowmon_crud_policy
        enable  : True
        ignore  : True
        args    :
            type: remote_only
        iterators :
            type    : simple
            num_exports : [1, 2, 4]
            num_flowmon_sessions : [1, 2, 4]
            proto   : [tcp, udp, icmp]

