            type      : nested
            pktsize   : [128]
            peer      : [local, remote]
            collector : [local, remote]
            vlan      : [native, tag]
            proto     : [tcp, udp, icmp, mixed]
            interval  : [1s]
            ccount    : [1, 4, 8]
            collection: [unified, distinct]
            erspan    : [mixed]
            vlan_strip: [mixed]
        args          :
