            iftype    : [uplink]
            direction : [ingress, egress, both]
            proto     : [tcp, udp, icmp, mixed]
            interval  : [1s]
            ccount    : [1, 4, 8]
            collection: [unified, distinct]
            erspan    : [mixed]
            vlan_strip: [mixed]
        args          :
            type      : regression
            ps_2263   : [bypass]
            ps_2790   : [bypass]

    -   name          : LifFlowErspanInbandCollector
        testcase      : testcases.expanded_telemetry.lif_flow_erspan_collector
