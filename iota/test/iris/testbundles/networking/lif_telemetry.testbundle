#
# This test-bundle provides LIF ERSPAN testing support in Transparent-basenet
# mode
#
meta:
    name              : lif_telemetry
    nics              : [ pensando, mellanox, intel, broadcom ]
    os                : [ linux, freebsd ]
    targetcount       : 1

testcases:
    -   name          : LifErspanInbandCollector
        testcase      : testcases.expanded_telemetry.lif_erspan_collector
        iterators     :
            type      : nested
            pktsize   : [128]
            peer      : [remote]
            collector : [local, remote]
            vlan      : [native, tag]
            iftype    : [uplink]
            direction : [ingress, egress, both]
            ccount    : [1, 2, 3, 4, 5, 6, 7, 8]
        args          :
            type      : sanity

