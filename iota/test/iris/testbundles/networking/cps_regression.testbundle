meta:
    name    : cps_regression
    os      : [ esx ]
    nics    : [ pensando, mellanox, intel, broadcom ]

testcases:
    -   name    : session_scale_stress_1hr
        testcase: testcases.networking.session_scale
        stress  : True
        ignore  : True
        args    :
             timeout: 7200
             latency_pps: 10
        iterators:
            type             : simple
            max_active_flow  : [64000]
            cps              : [900]
            duration         : [3600]
        background_tasks:
            showStats        : 
                trigger         : repeat
                sleep_interval  : 300
                terminate       : verify
            switchPortFlap   :
                trigger         : repeat
                sleep_interval  : 90
                terminate       : verify
            configurationChangeEvent :
                trigger         : repeat
                sleep_interval  : 120
                terminate       : verify
