meta:
    name    : cps
    os      : [ esx ]
    nics    : [ pensando, mellanox, intel, broadcom ]

testcases:
    -   name    : Cps_Remote_Workloads
        testcase: testcases.networking.conn_per_sec
        stress  : True
        ignore  : True
        args    :
            type     : remote_only
            drop_tol : 10.0 #percent
        iterators:
            type      : nested
            proto     : [ tcp ]
            cps       : [ 1000 ]
            duration  : [ 60 ]

    -   name    : session_scale
        testcase: testcases.networking.session_scale
        stress  : True
        ignore  : False
        args    :
             latency_pps: 10
        iterators:
            type             : simple
            max_active_flow  : [32000]
            cps              : [900]
            duration         : [150]
        background_tasks:
            showStats        : 
                trigger         : auto
                run             : repeat
                sleep_interval  : 60
                terminate       : verify
            switchPortFlap   :
                trigger         : auto
                run             : repeat
                sleep_interval  : 10
                terminate       : verify
            configurationChangeEvent :
                trigger         : auto
                run             : repeat
                sleep_interval  : 30
                terminate       : verify

