meta:
    name    : cps
    os      : [ esx ]
    nics    : [ pensando, mellanox, intel, broadcom ]

testcases:
    -   name    : Cps_Local_Workloads
        testcase: testcases.networking.conn_per_sec
        stress  : True
        args    :
            type     : local_only
            drop_tol : 10.0 #percent
        iterators:
            type      : nested
            proto     : [ tcp, udp ]
            cps       : [ 900 ]
            duration  : [ 300 ]
    -   name    : Cps_Remote_Workloads
        testcase: testcases.networking.conn_per_sec
        stress  : True
        args    :
            type     : remote_only
            drop_tol : 10.0 #percent
        iterators:
            type      : nested
            proto     : [ tcp, udp ]
            cps       : [ 900 ]
            duration  : [ 300 ]
    -   name    : session_scale
        testcase: testcases.networking.session_scale
        stress  : True
        ignore  : True
        args    :
             latency_pps: 10
        iterators:
            type             : simple
            max_active_flow  : [64000]
            cps              : [900]
            duration         : [300]
        background_tasks:
            showStats        : 
                trigger         : repeat
                sleep_interval  : 60
                terminate       : verify
            switchPortFlap   :
                trigger         : repeat
                sleep_interval  : 10
                terminate       : verify
            configurationChangeEvent :
                trigger         : repeat
                sleep_interval  : 30
                terminate       : verify

