meta:
    name    : ionicdrv
    os      : [ linux, freebsd ]

testcases:
    -   name    : UplinkIntf_TX_RING_SIZE
        testcase: testcases.drivers.features
        iterators :
            type               : nested
            tx_ring_size       : [ 1024 ]
            mtu                : [ '1500']
            pktsize            : [ 1024]
            proto              : [ 'udp', 'tcp']
            ipproto            : [ 'v4']
        args    :
            test-type         : host
            #capture_pcap : True

    -   name    : UplinkIntf_RX_RING_SIZE
        testcase: testcases.drivers.features
        disable : False
        iterators :
            type               : nested
            rx_ring_size       : [ 1024 ]
            mtu                : [ '1500']
            pktsize            : [ 1024 ]
            proto              : [ 'udp', 'tcp']
            ipproto            : [ 'v4']
        args    :
            test-type    : host
            #capture_pcap : true

    -   name    : UplinkIntf_TX_QUEUE_SIZE
        testcase: testcases.drivers.features
        disable : False
        iterators :
            type               : nested
            tx_queue_size      : [ 4 ]
            mtu                : [ '1500' ]
            pktsize            : [ 1024 ]
            proto              : ['udp', 'tcp']
            ipproto            : [ 'v4']
        args    :
            test-type    : host
            #capture_pcap : true

    -   name    : UplinkIntf_RX_QUEUE_SIZE
        testcase: testcases.drivers.features
        disable : False
        iterators :
            type               : nested
            rx_queue_size      : [ 4]
            mtu                : [ '1500' ]
            pktsize            : [ 1024 ]
            proto              : ['udp', 'tcp']
            ipproto            : [ 'v4']
        args    :
            test-type    : host
            #capture_pcap : true

    -   name    : UplinkIntf_TX_CHECKSUM
        testcase: testcases.drivers.features
        disable : False
        iterators :
            type               : nested
            tx_check_sum       : [ 'off', 'on']
            mtu                : [ '1500' ]
            pktsize            : [ 1024 ]
            proto              : ['udp', 'tcp']
            ipproto            : [ 'v4']
        args    :
            test-type    : host
            #capture_pcap : true

    -   name    : UplinkIntf_RX_CHECKSUM
        testcase: testcases.drivers.features
        disable : False
        iterators :
            type               : nested
            rx_check_sum       : [ 'off', 'on']
            mtu                : [ '1500' ]
            pktsize            : [ 1024 ]
            proto              : ['udp', 'tcp']
            ipproto            : [ 'v4']
        args    :
            test-type    : host
            #capture_pcap : true

    -   name    : UplinkIntf_TSO
        testcase: testcases.drivers.features
        disable : False
        iterators :
            type               : nested
            mtu                : [ '8192']
            tso_offload        : [ 'off', 'on']
            #Sg seems to be on for TSO testing.
            sg_offload         : [ 'on']
            #TSO requires rx and tx cheksum
            rx_check_sum       : [ 'on']
            tx_check_sum       : [ 'on']
            pktsize            : [  8192 ]
            proto              : ['udp', 'tcp']
            ipproto            : [ 'v4']
        args    :
            test-type    : host
            #capture_pcap : true
    -   name    : UplinkIntf_TSO_AFTER_RESTART
        testcase: testcases.drivers.features
        disable : False
        iterators :
            type               : nested
            mtu                : [ '8192']
            tso_offload        : [ 'on']
            #Sg seems to be on for TSO testing.
            sg_offload         : [ 'on']
            #TSO requires rx and tx cheksum
            rx_check_sum       : [ 'on']
            tx_check_sum       : [ 'on']
            pktsize            : [  8192 ]
            proto              : [ 'tcp']
            ipproto            : [ 'v4']
        args    :
            test-type    : host
            restart      : true
            #capture_pcap : true
