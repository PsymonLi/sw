meta:
    name    : vlan_offload
    os      : [ freebsd, esx, windows ]
    nics    : [ pensando, mellanox, intel, broadcom ]
    targetcount : 21

testcases:
    -   name    : tx_on_rx_off
        testcase: testcases.vlanoffload.vlanoffload
        stress  : False
        iterators:
            ipaf: [ ipv4 ]
            type: nested
            pktsize: [ 64 ]
        args    :
            type: remote_only
            tx: True
            rx: False

    -   name    : tx_off_rx_off
        testcase: testcases.vlanoffload.vlanoffload
        stress  : False
        iterators:
            ipaf: [ ipv4 ]
            type: nested
            pktsize: [ 128 ]
        args    :
            type: remote_only
            tx: False
            rx: False

    -   name    : tx_on_rx_on
        testcase: testcases.vlanoffload.vlanoffload
        stress  : False
        iterators:
            ipaf: [ ipv4 ]
            type: nested
            pktsize: [ 512 ]
        args    :
            type: remote_only
            tx: True
            rx: True

    -   name    : tx_off_rx_on
        testcase: testcases.vlanoffload.vlanoffload
        stress  : False
        iterators:
            ipaf: [ ipv4 ]
            type: nested
            pktsize: [ 1024 ]
        args    :
            type: remote_only
            tx: False
            rx: True

    # -   name    : tx_random_rx_random
    #     testcase: testcases.vlanoffload.vlanoffload
    #     stress  : False
    #     iterators:
    #         ipaf: [ ipv4 ]
    #         type: nested
    #         pktsize: [ 1024 ]
    #     args    :
    #         type: remote_only
    #         tx: 0
    #         rx: 0

    -   name    : Ping_Remote_Workloads
        testcase: testcases.networking.ping
        stress  : True
        args    :
            type: remote_only
        iterators :
            type    : nested
            pktsize : [64, 128, 256, 512, 1024, 2048, 4096, 8192]
            #ipaf    : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]

    -   name    : Ping_Local_Workloads
        testcase: testcases.networking.ping
        stress  : True
        args    :
            type: local_only
        iterators :
            type    : nested
            pktsize : [ 64, 128, 256, 512, 1024, 2048, 4096, 8192]
            #ipaf    : [ ipv4, ipv6 ]
            ipaf    : [ ipv4 ]

