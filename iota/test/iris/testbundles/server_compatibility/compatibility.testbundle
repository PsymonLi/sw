meta:
    name    : server
    os      : [ linux ]
    nics    : [ pensando ]
    targetcount : 1

testcases:

    -   name    : APC-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : True
        stress  : True
        iterators :
            type            : nested
            reboot_method   : ['apc']
        args    :
            timeout: 42200
            type: host
            reboots: 55

    -   name    : IPMI-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : True
        stress  : True
        iterators :
            type            : nested
            reboot_method   : [ 'ipmi']
        args    :
            timeout: 27900
            type: host
            reboots: 35

    -   name    : OS-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : True
        stress  : True
        iterators :
            type            : nested
            reboot_method   : [ 'reboot']
        args    :
            timeout: 13500
            type: host
            reboots: 15

