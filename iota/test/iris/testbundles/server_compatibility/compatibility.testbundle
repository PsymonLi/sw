meta:
    name    : server_compatibility
    os      : [ linux ]
    nics    : [ pensando ]
    targetcount : 1 

testcases:
    -   name    : IPMI-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : True
        stress  : True
        iterators : 
            type            : nested
            reboot_method   : [ 'ipmi']
        args    :
            timeout: 21600
            type: host
            reboots: 25 

    -   name    : APC-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : True
        stress  : True
        iterators : 
            type            : nested
            reboot_method   : ['apc']
        args    :
            timeout: 21600
            type: host
            reboots: 25

    -   name    : OS-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : True
        stress  : True
        iterators : 
            type            : nested
            reboot_method   : [ 'reboot']
        args    :
            timeout: 21600
            type: host
            reboots: 25

