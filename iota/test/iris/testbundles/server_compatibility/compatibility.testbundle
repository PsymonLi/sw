meta:
    name    : server
    os      : [ linux, esx, windows ]
    nics    : [ pensando ]
    targetcount : 1

testcases:
# assuming 14min per reboot

    -   name    : pxe-install
        testcase: testcases.server.pxeinstall
        disable : False
        ignore  : True
        stress  : True
        args    :
            timeout: 360000
            type: host
            install_iterations: 1

    -   name    : APC-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : False
        stress  : True
        iterators :
            type            : nested
            reboot_method   : ['apc']
        args    :
            timeout: 360000
            type: host
            # 60% of the test cycle time spent on APC power cycle
            reboots: 10

    -   name    : IPMI-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : False
        stress  : True
        iterators :
            type            : nested
            reboot_method   : [ 'ipmi']
        args    :
            timeout: 360000
            type: host
            # 30% of the test cycle time spent on IPMI power cycle
            reboots: 10

    -   name    : OS-Reboot
        testcase: testcases.server.reboot
        disable : False
        ignore  : False
        stress  : True
        iterators :
            type            : nested
            reboot_method   : [ 'reboot']
        args    :
            timeout: 360000
            type: host
            # 10% of the test cycle time spent on OS Reboot
            reboots: 10

    -   name    : CheckPcieId
        testcase: testcases.server.checkpcieid
        disable : False
        ignore  : True
        stress  : True

    -   name    : CheckPcieWidth
        testcase: testcases.server.checkpciewidth
        disable : False
        ignore  : True
        stress  : True
