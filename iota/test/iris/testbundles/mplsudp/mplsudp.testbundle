meta:
    name    : mplsudp
    os      : [ linux ]
    nics    : [ pensando ] # Always requires Naples<->Naples setups

testcases:
    -   name    : ping
        testcase: testcases.mplsudp.ping
        stress  : True
        iterators:
            type    : nested
            pktsize : [ 64, 128, 256, 512, 1024, 2048, 4096, 8192]
            ipaf    : [ ipv4 ]

    -   name    : iperf
        testcase: testcases.mplsudp.iperf
        stress  : True
        iterators:
            type      : nested
            proto     : [ udp, tcp ]
            bandwidth : [ 10Gbps, 25Gbps, 50Gbps, 100Gbps ]
