meta:
    name    : qos
    os      : [ freebsd ]
    nics    : [ pensando, mellanox ]
    targetcount : 10

testcases:
    #=======================================
    # Init
    #=======================================
    -   name    : Build_Rdma
        testcase: testcases.rdma.build_rdma
        args    :
            type: remote_only

    -   name    : Insmod_Rdma
        testcase: testcases.rdma.insmod_rdma
        args    :
            type: remote_only

    -   name    : Show_Gid
        testcase: testcases.rdma.show_gid
        args    :
            type: remote_only

    -   name    : Intf_Mtu
        testcase: testcases.rdma.intf_mtu
        args    :
            type: remote_only

    #=======================================
    # PCP Tests 
    #=======================================
    -   name    : QoS_Switch_Config_Pfc_Pcp
        testcase: testcases.qos.qos_switch_config
        args    :
            type: remote_only
            intf_qos: True
            pause_enable: True
            pause_type: 1

    -   name    : QoS_Class_Type_Pcp
        testcase: testcases.qos.qos_classification
        args    :
            type: remote_only
            class_type: 1

    -   name    : Qos_Pfc_Config_Pcp
        testcase: testcases.qos.qos_pfc_config
        iterators :
            type         : nested
            tclass       : [1]
            enable       : [1]
            mtu          : [9000]
            pcp          : [1]
            pfc_cos      : [1]
            no_drop      : [1]
            fc_config    : [1]
            fc_type      : [2]
            traffic_type : [1]
        args    :
            type: remote_only
            class_type: 1

    -   name    : Qos_Traffic_Pfc_TC3_Pcp
        testcase: testcases.qos.qos_traffic_test
        args    :
            type: remote_only
            class_type: 1
            num_rdma_cps: 1
            rdma_cps : [1]

    #============================================
    # Disable TCs before changing the class type
    #============================================
    -   name    : Qos_Teardown_Pcp
        testcase: testcases.qos.qos_teardown
        args    :
            type: remote_only

    #=======================================
    # DSCP Tests
    #=======================================
    -   name    : QoS_Class_Type_Dscp
        testcase: testcases.qos.qos_classification
        args    :
            type: remote_only
            class_type: 2

    -   name    : Qos_Pfc_Config_Dscp
        testcase: testcases.qos.qos_pfc_config
        iterators :
            type         : nested
            tclass       : [1]
            enable       : [1]
            mtu          : [9000]
            pfc_cos      : [1]
            no_drop      : [1]
            fc_config    : [1]
            fc_type      : [2]
            traffic_type : [1]
        args    :
            type: remote_only
            class_type: 2
            dscps     : [8]

    -   name    : Qos_Traffic_Pfc_TC3_Dscp
        testcase: testcases.qos.qos_traffic_test
        args    :
            type: remote_only
            class_type: 2
            num_rdma_cps: 1
            rdma_cps : [8]

    #=======================================
    # Teardown
    #=======================================
    -   name    : QoS_Switch_Unconfig
        testcase: testcases.qos.qos_switch_config
        args    :
            type: remote_only
            intf_qos: False
            pause_enable: False
            pause_type: 1

    -   name    : Qos_Teardown
        testcase: testcases.qos.qos_teardown
        args    :
            type: remote_only

    -   name    : Rmmod_Rdma
        testcase: testcases.rdma.rmmod_rdma
        args    :
            type: remote_only

