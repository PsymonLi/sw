meta:
    name        : server_compat_hostpin 
    description : Server Compatibility Hostpin 
    mode        : hardware
    cfgmode     : netagent
    nicmode     : hostpin
    enable      : True
    os          : [ esx, linux ]

packages:
    - iota.test.iris

image_manifest:
    spec        : images/latest.json

setup:
    topology: test/iris/topologies/1Naples_VM/1Naples.topology
    config  :
        - step : utils.cleanup
        - step : testcases.penctl.install
        - step : testcases.penctl.enable_ssh
#        - step : config.netagent.mode_switch

common:
    verifs:
        -   step    : verif.utils.verify_interrupts
    debugs:
        # N/A
    setup:
        # N/A
testbundles:
    sanity:
        # Relative paths from iota/test/iris/testbundles/
        # - networking/connectivity.testbundle
        - server_compatibility/compatibility.testbundle

teardown:
        # N/A
