meta:
    name        : classic_regression
    description : Classic NIC Testsuite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic
    os          : [ linux, freebsd ]

packages:
    - iota.test.iris

images:
    naples: nic/naples_fw.tar

setup:
    topology: test/iris/topologies/baremetal/baremetal.topology
    config  :
        - step : config.netagent.hw_push_config
        - step : testcases.drivers.install_iperf
        - step : testcases.penctl.install

common:
    verifs:
        #-   step    : verif.utils.verify_cores
        #-   step    : verif.utils.verify_topology_health

testbundles:
    # Relative paths from iota/test/iris/testbundles/
    - networking/networking.testbundle
    - classic/rdma.testbundle
    - storage/storage.testbundle
    - penctl/penctl.testbundle
    - mnic/mnic_classic.testbundle
    - classic/internal_mgmt.testbundle
    - classic/driver-features.testbundle
 
teardown:
    #- step      : verif.utils.collect_logs_and_cores
