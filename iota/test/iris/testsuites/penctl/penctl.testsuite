meta:
    name        : penctl
    description : PenCtl Test Suite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic

packages:
    - iota.test.iris

images:

setup:
    topology: test/iris/topologies/1Naples_BM/1Naples.topology
    config  :
        - step : config.netagent.hw_push_config
        - step : testcases.penctl.install

common:
    verifs:
        #-   step    : verif.utils.verify_cores
        #-   step    : verif.utils.verify_topology_health

testcases:
    -   name    : CHECK_LOGS
        testcase: testcases.penctl.log
        iterators :
            type : simple
            option : ["nmd", "netagent", "tmagent"]
        verifs  :
            #-   step    : verif.operstate.verify_stats_agent
            #-   step    : verif.operstate.verify_stats_hw

teardown:
    #- step      : verif.utils.collect_logs_and_cores
