meta:
    name        : hostpin::networking
    description : Hardware Test Suite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : hostpin
    enable      : True

packages:
    - iota.test.iris

images:
#    naples: /sw/nic/naples_fw.tar
#    venice: /sw/bin/venice.tgz
#    drivers: /sw/platform/drivers.tgz

setup:
    topology: test/iris/topologies/2Naples_CTR/2Naples.topology
    #topology: test/iris/topologies/1Naples_1Mellanox_BM/1Naples_1Mellanox.topology
    config  : 
        - step : config.netagent.hw_push_config

common:
    verifs:
        #-   step    : verif.utils.verify_cores
        #-   step    : verif.utils.verify_topology_health

testcases:
    -   name    : Ping_Local_Workloads
        testcase: testcases.networking.ping
        args    :
            type: local_only
        iterators :
            type    : simple
            pktsize : [64, 128, 256, 512, 1024, 2048, 4096, 8192]
        verifs  :
            #-   step    : verif.operstate.verify_stats_agent
            #-   step    : verif.operstate.verify_stats_hw

    -   name    : Ping_Remote_Workloads
        testcase: testcases.networking.ping
        args    :
            type: remote_only
        iterators :
            type    : simple
            pktsize : [64, 128, 256, 512, 1024, 2048, 4096, 8192]
        verifs  :
            #-   step    : verif.operstate.verify_stats_agent
            #-   step    : verif.operstate.verify_stats_hw

    -   name    : Iperf_Remote_Workloads
        testcase: testcases.networking.iperf
        iterators:
            type      : nested
            proto     : [ udp, tcp ]
            bandwidth : [ 10Gbps, 25Gbps, 50Gbps, 100Gbps ]
        args    :
            type: remote_only
        verifs  :
            #-   step    : verif.operstate.verify_stats_agent
            #-   step    : verif.operstate.verify_stats_hw
    
    -   name    : Ping_Mirror_Remote_Workloads
        testcase: testcases.telemetry.ping_mirror
        args    :
            type: remote_only
        iterators :
            type    : simple
            pktsize : [128]
        verifs  :
            #-   step    : verif.operstate.verify_stats_agent
            #-   step    : verif.operstate.verify_stats_hw

teardown:
    #- step      : verif.utils.collect_logs_and_cores
