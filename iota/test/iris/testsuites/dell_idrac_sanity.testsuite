meta:
    name        : dell_idrac_sanity
    description : idrac Sanity Testsuite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic
    os          : [ linux ]

packages:
    - iota.test.iris

image_manifest:
    spec        : images/latest.json
    naples      : capri

setup:
    topology: test/iris/topologies/classic_baremetal_1Naples/classic_baremetal.topology
    config  :

        - step : utils.cleanup
        - step : testcases.penctl.install
        - step : testcases.penctl.enable_ssh
        - step : utils.naples_workloads
        - step : config.workload.api

common:
    verifs:
        # N/A
    debugs:
        # N/A
    setup:
        # N/A
testbundles:
    sanity:
        # Relative paths from iota/test/iris/testbundles/
        - dell_idrac/dell_idrac_sanity.testbundle

teardown:
        # N/A
