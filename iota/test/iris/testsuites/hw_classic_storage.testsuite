meta:
    name        : hw_classic_storage
    description : Storage Hardware Test Suite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic

packages:
    - iota.test.iris

images:
    naples  : /home/vikasd/shared/piraman/naples_fw.tar

setup:
    topology: test/iris/topologies/1Naples_1Mellanox_CTR/1Naples_1Mellanox.topology
    config  : 
        - step : config.netagent.hw_push_config

common:
    verifs:
        - step    : verif.utils.verify_dmesg

testcases:
    -   name    : Compile_Sonic_Drivers
        testcase: testcases.storage.compile_drivers
        args    :
            drivers : storage/gen/storage-offload.tar.xz

    -   name    : Insmod_Sonic
        testcase: testcases.storage.insmod
        args    :
            mod : sonic.ko

    -   name    : Insmod_Pencake
        testcase: testcases.storage.insmod
        args    :
            mod : pencake.ko

teardown:
    #- step      : verif.utils.collect_logs_and_cores
