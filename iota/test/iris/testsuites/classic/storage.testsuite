meta:
    name        : storage
    description : Storage Hardware Test Suite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic

packages:
    - iota.test.iris

images:

setup:
    topology: test/iris/topologies/1Naples_BM/1Naples.topology
    config  : 
        - step : config.netagent.hw_push_config

common:
    verifs:
        - step    : verif.utils.verify_dmesg

testcases:
    -   name    : Compile_Sonic_Drivers
        testcase: testcases.storage.compile_drivers
        args    :
            package: storage/gen/storage-offload.tar.xz

    -   name    : Insmod_Sonic_Pencake
        testcase: testcases.storage.insmod

teardown:
    #- step      : verif.utils.collect_logs_and_cores
