meta:
    name        : classic::networking
    description : Networking Test Suite
    mode        : hardware
    cfgmode     : netagent
    nicmode     : classic

packages:
    - iota.test.iris

images:

setup:
    topology: test/iris/topologies/2Naples_BM/2Naples.topology
    config  :
        - step : config.netagent.hw_push_config

common:
    verifs:
        #-   step    : verif.utils.verify_cores
        #-   step    : verif.utils.verify_topology_health

testcases:
    -   name    : Port_Flap
        testcase: testcases.networking.port_flap
    -   name    : Ping_Local_Workloads
        testcase: testcases.networking.ping
        iterators :
            type    : simple
            pktsize : [64, 128, 256, 512, 1024, 2048, 4096, 8192]
        args    :
            type: local_only
        verifs  :
            #-   step    : verif.operstate.verify_stats_agent
            #-   step    : verif.operstate.verify_stats_hw

    -   name    : Ping_Remote_Workloads
        testcase: testcases.networking.ping
        args    :
            type: remote_only
        verifs  :
            #-   step    : verif.operstate.verify_stats_agent
            #-   step    : verif.operstate.verify_stats_hw

    -   name    : Iperf_Remote_Workloads
        testcase: testcases.networking.iperf
        iterators:
            type      : nested
            proto     : [ udp, tcp ]
            bandwidth : [ 1Gbps, 10Gbps, 25Gbps, 50Gbps, 100Gbps ]
        args    :
            type: remote_only
        verifs  :
            #-   step    : verif.operstate.verify_stats_agent
            #-   step    : verif.operstate.verify_stats_hw

teardown:
    #- step      : verif.utils.collect_logs_and_cores
