#!/bin/sh

npass=0
nfail=0
for tc in testcases/*.in; do
    tb=`echo $tc | sed -e 's/\.in$//'`
    rm -f $HOME/.palreg-*
    ../testtools/genrun pciemgrd < $tc > /dev/null
    ../testtools/genrun lspci -nvvvxxxx > $tb.out
    if ! cmp -s $tb.exp $tb.out; then
	printf "%-40s FAILED ***\n" $tc
	diff $tb.exp $tb.out
	nfail=`expr $nfail + 1`
    else
	printf "%-40s passed\n" $tc
	rm $tb.out
	npass=`expr $npass + 1`
    fi
done

echo Passed: $npass Failed: $nfail
[ $nfail != 0 ] && exit 1
exit 0
